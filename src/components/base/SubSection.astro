---
interface Props {
  title: string;
  content: string;
  examples: Array<string>;
}

const { content, title, examples } = Astro.props;
---

<section class="ml-4 mb-2">
  <h3 class="font-bold mt-4 mb-2">{{ title }}</h3>
  <p>{{ content }}</p>
  <ul class="mb-8 list-disc pl-4 ml-2">
    {examples.map((item) => <li class="my-2">{{ item }}</li>)}
  </ul>
</section>
