---
import {
  Accordion,
  AccordionContent,
  AccordionItem,
  AccordionTrigger,
} from "@/components/ui/accordion"
import Subsection from './SubSection.astro'
import type { AccordionItemContent } from "@/content/typeInterfaces";
interface Props {
  accordionItems: AccordionItemContent[]
}

const { accordionItems } = Astro.props;
---

<Accordion type="single" collapsible>
    <AccordionItem value="item-1">
      <AccordionTrigger>Is it accessible?</AccordionTrigger>
      <AccordionContent>
        {accordionItems.map((item) => <Subsection title={item.title} content={item.content} examples={item.examples}/>)}
      </AccordionContent>
    </AccordionItem>
  </Accordion>